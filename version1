function randomNumber() {
    var userNum = Math.floor(Math.random() * 100)+1;
    console.log(userNum)
}

<input type='button' onClick="randomNumber()" value="Generate"></input>





// each user assigned with random number (1-100) 

var userNum = Math.floor(Math.random()*100)+1;
console.log(userNum);

// frontend, button will update/refresh number assigned

// HTML
<button type="submit" onClick="refreshNum()">Refresh Button</Button>

// Javascript
<script>
function refreshNum(){
  window.location.reload();
}
</script>

// everyone will see current number assigned to every user connected to the system

print (userNum)

// when user logs in, updates number, or quits the system
// displayed numbers will update accordingly

// bidirectional communication channel between client and server

// web framework
// HTML webpage to serve a form and list of messages

// using node.js framework "express" 
// create "package.json" manifest file that describes project 

{
  "name"; "live log",
  "version"; "1",
  "description"; "user tracker",
  "dependencies"; {}
}

// to populate dependencies
// npm install express@4.15.2
// once installed create index.js file to set up application

var app = require('express')();
var http = require('http').createServer(app);

app.get('/', (req, res) => {
  res.send('<h1>Live User Log</h1>');
});

http.listen(3000, () => {
  console.log('listening on *:3000');
});

// run 'node index.js' 
// browser http://localhost:3000

app.get('/', (req, res) => {
    res.sendFile(__dirname + '/index.html');
  });
